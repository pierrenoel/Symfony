{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container mx-auto my-10">

        {% if app.user %}
            <div class="mb-3">
               Tu es connecté en avec l'adresse suivante {{ app.user.username }},
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
            {% else %}
                <h1 class="text-2xl pb-5">Connecte-toi!</h1>
                <form method="post" class="flex flex-col">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div>
                        <input type="email"
                               value="{{ last_username }}"
                               name="email" class="p-3 w-full" autocomplete="email" autofocus>
                    </div>


                    <div class="my-5">
                        <input type="password" name="password"
                               class="p-3 w-full" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                    <div>
                        <button class="p-3 bg-green-500 text-white" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>

        {% endif %}


    </div>

{% endblock %}
